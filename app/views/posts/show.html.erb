<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <div id="post_content">
    <%= h_with_replace(@post.content) %>
  </div>
</p>

<p>
  <b>Is public:</b>
  <%= @post.is_public %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
